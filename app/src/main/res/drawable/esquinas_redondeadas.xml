<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Código obtenido de la URL -->
    <!-- https://tutorialesandroidweb.wordpress.com/2015/08/30/android-anadir-esquinas-redondeadas-a-nuestro-layout/ -->

    <!-- Color de fondo de la vista -->
    <solid
        android:color="#FFFFFF" >
    </solid>

    <!-- Color y ancho del borde del elemento -->
    <stroke
        android:width="3dp"
        android:color="#FFFFFF" >
    </stroke>

    <!-- Aquí indicamos el radio a aplicar a las esquinas -->
    <corners
        android:radius="15dp"   >
    </corners>

</shape>