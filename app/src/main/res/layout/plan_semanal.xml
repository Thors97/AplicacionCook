<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ____ PRIMERA FILA_________________________________ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Lunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/chewy"
                android:text="@string/resumenLunes"
                android:textSize="24sp" />

            ​

            <TextView
                android:id="@+id/desayunoLunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumendesayunoLunes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/comidaLunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencomidaLunes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/cenaLunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencenaLunes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Martes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/chewy"
                android:text="@string/resumenMartes"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desayunoMartes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumendesayunoMartes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/comidaMartes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencomidaMartes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/cenaMartes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencenaMartes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

        </LinearLayout>
    </LinearLayout>

