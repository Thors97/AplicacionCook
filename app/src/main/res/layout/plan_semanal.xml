                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencenaMiércoles"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Jueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/chewy"
                android:text="@string/resumenJueves"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desayunoJueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumendesayunoJueves"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/comidaJueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencomidaJueves"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/cenaJueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencenaJueves"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

        </LinearLayout>
    </LinearLayout>

    <!-- ____ TERCERA FILA_________________________________ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Viernes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/chewy"
                android:text="@string/resumenViernes"
                android:textSize="24sp" />

            ​

            <TextView
                android:id="@+id/desayunoViernes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumendesayunoViernes"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <TextView
                android:id="@+id/comidaViernes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#00897B"
                android:backgroundTint="#00897B"
                android:paddingStart="8dp"
                android:text="@string/resumencomidaViernes"
